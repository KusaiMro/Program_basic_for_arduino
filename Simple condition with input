// C++ code
//input define



void setup()
{
	Serial.begin(9600);
 
}

void loop()
{
  if(Serial.available()>0)
  {
	char data = Serial.read();
  	if(data=='r'||data=='R')
  	{
  	Serial.println("Today is Rainy Day");
  	}else
  	{
    Serial.println("Today is Sunny Day");
  	}
  delay(1000);
  }
}
